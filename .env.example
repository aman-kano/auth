# Application
NODE_ENV="development"
PORT=3000
APP_URL="http://localhost:3000"

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=auth_service
DATABASE_URL="postgresql://user:password@localhost:5432/drone_auth?schema=public"

# JWT
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRATION="1h"
JWT_REFRESH_EXPIRATION="7d"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH="logs/auth-service.log"
LOG_MAX_SIZE="20m"
LOG_MAX_FILES=14

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
RATE_LIMIT_STORE=memory

# MFA
MFA_ISSUER=DroneManagementSystem
MFA_WINDOW=30
MFA_DIGITS=6
MFA_BACKUP_CODES_COUNT=8

# Email (for password reset)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
SMTP_FROM="noreply@example.com"
SMTP_TEMPLATE_DIR="templates/email"

# OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_CALLBACK_URL="http://localhost:3000/auth/github/callback"

# Security
CORS_ORIGIN="http://localhost:3000"
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15
SESSION_DURATION=24
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318/v1/traces"
OTEL_SERVICE_NAME="auth-service"
OTEL_SERVICE_VERSION="1.0.0"
OTEL_ENVIRONMENT="development" 